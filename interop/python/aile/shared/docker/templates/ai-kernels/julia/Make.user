# If not set, EC2 instances and other mahcines
# may raise "target architecture mismatch" error.
override MARCH=x86-64

USE_SYSTEM_LLVM:=1
USE_SYSTEM_PCRE:=1
USE_SYSTEM_ARPACK:=1
USE_SYSTEM_CURL:=1
USE_SYSTEM_DSFMT:=1
USE_SYSTEM_GMP:=1
USE_SYSTEM_MPFR:=1
USE_SYSTEM_PCRE:=1
USE_SYSTEM_PATCHELF:=1
USE_SYSTEM_FFTW:=1
USE_SYSTEM_SUITEPARSE:=1
USE_SYSTEM_LIBM:=1
USE_SYSTEM_OPENLIBM:=1
USE_SYSTEM_UTF8PROC:=1
USE_SYSTEM_OPENSPECFUN:=1
UNTRUSTED_SYSTEM_LIBM:=1
USE_SYSTEM_LIBSSH2:=1
USE_SYSTEM_LIBGIT2:=1
USE_SYSTEM_LIBUNWIND:=1
USE_SYSTEM_LIBUV:=0

USE_SYSTEM_BLAS:=1
USE_SYSTEM_LAPACK:=0

# must be set to use the system blas.
LIBBLAS=-lopenblas
LIBBLASNAME=libopenblas
